        });
        return;
    }

    // Apply CAPTCHA logic
    logToSheet('INFO', `[handleNewChatMember] Applying CAPTCHA to user ${user.id} in chat ${chat.id}`);
    const muteUntil = Math.floor(Date.now() / 1000) + (config.captcha_mute_duration_min * 60);
